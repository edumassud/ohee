<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:layout_margin="4dp"
    android:background="@drawable/navigation_bar_bg"
    android:padding="8dp">

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:baselineAlignBottom="false"
        android:paddingRight="32dp"
        app:srcCompat="@drawable/ic_home_hs_unselected" />

    <ImageView
        android:id="@+id/chatIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingRight="40dp"
        app:srcCompat="@drawable/ic_chat_unselected" />

    <ImageView
        android:id="@+id/notificationsIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingLeft="40dp"
        app:srcCompat="@drawable/ic_notifications_unselected" />

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingLeft="32dp"
        app:srcCompat="@drawable/ic_profile_unselected" />
</LinearLayout>